{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "es6"
      ],
      "sourceMap": true,
      "jsx": "react",
      "noUnusedLocals": false,
      "forceConsistentCasingInFileNames": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
      "noEmit": false,
      "noEmitOnError": true,
      "esModuleInterop": true
    },
    "include": [
      "./src/**/*",
      "./types/*"
    ],
    "exclude": [
      "./node_modules/*"
    ]
  }